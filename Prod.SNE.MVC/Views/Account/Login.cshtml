@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style type="text/css">
    a {
        text-decoration: none;
    }

    .login-page {
        width: 100%;
        height: 100vh;
        display: inline-block;
        display: flex;
        align-items: center;
    }

    .form-right i {
        font-size: 100px;
    }

    .custom-btn-primary {
        background-color: #BF0909;
        border-color: #BF0909;
    }
    .f14{
        font-size: 14px !important;
    }
</style>
<body>
    <div class="login-page bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <h3 class="mb-3">Iniciar Sesión</h3>
                    <div class="bg-white shadow rounded">
                        <div class="row">
                            <div class="col-md-7 pe-0">
                                <div class="form-left h-100 py-5 px-5">
                                    <form class="row g-4 f14" asp-controller="Account" asp-action="Login" method="post">
                                        @if (!ViewData.ModelState.IsValid)
                                        {
                                            <div asp-validation-summary="All" class="validation-summary"></div>
                                        }
                                        <div class="col-12">
                                            <label>Email<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
                                                <input type="text" asp-for="Username" class="form-control f14" placeholder="Ingresar Usuario">
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <label>Contraseña<span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <div class="input-group-text"><i class="bi bi-lock-fill"></i></div>
                                                <input type="password" asp-for="Password" class="form-control f14" placeholder="Ingresar Contraseña">
                                            </div>
                                        </div>

                                        <div class="col-12">
                                            <button type="submit" class="btn btn-primary f14 px-4 float-end mt-4 custom-btn-primary">Acceder</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-5 ps-0 d-none d-md-block">
                                <div class="form-right h-100 text-white text-center" style="background-color:#F8F7F7;">
                                    <img src="~/images/girls-portada.png"
                                         style="height: 360px"
                                         class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <p class="text-end text-secondary mt-3"><strong>Ministerio de Trabajo y Promoción del Empleo</strong></p>
                </div>
            </div>
        </div>
    </div>
</body>